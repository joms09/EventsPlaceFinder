<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="vertical">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/address_details_tv9"
                android:text="City: "
                android:textSize="25sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:layout_gravity="center"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/address_details"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:id="@+id/city_details"
                android:text="city of company"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/address_details_tv9" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:text="@string/visitor_count"
                android:textSize="24sp"
                android:layout_gravity="center"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:id="@+id/textView2"/>
        <TextView
                android:id="@+id/count_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintEnd_toEndOf="@+id/textView2"/>
        <ImageView
                android:id="@+id/image_details"
                android:layout_width="match_parent"
                android:layout_height="321dp"
                android:contentDescription="@string/image"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/count_details" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name_details_tv"
                android:text="Name: "
                android:textSize="25sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/image_details" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/address_details_tv"
                android:text="Address: "
                android:textStyle="bold"
                android:textSize="25sp"
                android:fontFamily="monospace"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/name_details" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/address_details_tv2"
                android:text="Type: "
                android:textSize="25sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:layout_gravity="center"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.498" android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/city_details"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/address_details_tv3"
                android:text="Description: "
                android:textStyle="bold"
                android:textSize="25sp"
                android:fontFamily="monospace"
                android:layout_gravity="center"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/type_details"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/address_details_tv4"
                android:text="Amenities: "
                android:textSize="25sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:layout_gravity="center"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/min_price_details"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/address_details_tv5"
                android:text="Maximum People: "
                android:textStyle="bold"
                android:textSize="25sp"
                android:fontFamily="monospace"
                android:layout_gravity="center"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/min_people_details"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/address_details_tv6"
                android:text="Minimum People: "
                android:textStyle="bold"
                android:textSize="25sp"
                android:fontFamily="monospace"
                android:layout_gravity="center"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/description_details"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:id="@+id/address_details_tv7"
                android:text="Price starts at: "
                android:textStyle="bold"
                android:textSize="25sp"
                android:fontFamily="monospace"
                android:layout_gravity="center"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/max_people_details"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/address_details_tv8"
                android:text="Business Hours: "
                android:textStyle="bold"
                android:textSize="25sp"
                android:fontFamily="monospace"
                android:layout_gravity="center"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/amenities_details"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name_details"
                android:text="name of company"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/name_details_tv" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/address_details"
                android:text="address of company"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/address_details_tv" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:id="@+id/type_details"
                android:text="type of company"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/address_details_tv2" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/description_details"
                android:text="description of company"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/address_details_tv3"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"/>


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/min_people_details"
                android:text="min people of company"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/address_details_tv6" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.509"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/max_people_details"
                android:text="max people of company"
                android:textSize="16sp"
                android:layout_gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/address_details_tv5"
                android:layout_marginTop="8dp" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/amenities_details"
                android:text="amenities of company"
                android:textSize="16sp"
                android:layout_gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/address_details_tv4" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.502"
                android:layout_marginTop="8dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/min_price_details"
                android:text="min price of company"
                android:textSize="16sp"
                android:layout_gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/address_details_tv7"
                android:layout_marginTop="8dp" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.502"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bHours_details"
                android:text="bHours"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/address_details_tv8"/>


        <Button
                android:id="@+id/liveChatBtn"
                android:text="@string/message_me"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintTop_toBottomOf="@+id/bHours_details" android:layout_marginTop="32dp"/>
        <Button
                android:id="@+id/rate_review"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/click_here_to_rate_and_review"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/liveChatBtn"/>
        <TextView
                android:text="@string/ratings_and_reviews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView17"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/rate_review"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
        <ListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="1000dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView17"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" tools:layout_editor_absoluteX="8dp">

        </ListView>

    </android.support.constraint.ConstraintLayout>

</ScrollView>